<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SendCachFragment">

    <TextView
        android:id="@+id/tv_receiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Cach to Receiver Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/et_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_receiver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="RS0.00"
        />
    <Button
        android:id="@+id/btn_cancelCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="cancel"
        app:layout_constraintRight_toLeftOf="@id/btn_sendCash"
        app:layout_constraintTop_toBottomOf="@id/et_amount"
       app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btn_sendCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        app:layout_constraintTop_toTopOf="@id/btn_cancelCash"
        app:layout_constraintLeft_toRightOf="@id/btn_cancelCash"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="done"
        app:layout_constraintRight_toLeftOf="@id/btn_sendCash"
        app:layout_constraintTop_toBottomOf="@id/btn_sendCash"
        app:layout_constraintLeft_toLeftOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>